CC=gcc
SRC=main.c school.c
NAME=school
OBJ=$(SRC:.c=.o)
RM=rm -f

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

main.o: main.c
	$(CC) -c -o $@ $<

school.o: school.c
	$(CC) -c -o $@ $<

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re
